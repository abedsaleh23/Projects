@model IEnumerable<GProject2.Models.Coach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdmiLayout.cshtml";
}

<h1 style="margin-top:20px">Coaches List</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscordName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Social)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaypalAcc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achivment)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsCoachConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="data:image;base64,@Convert.ToBase64String(item.Image)" width="64" height="64" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscordName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Social)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaypalAcc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Achivment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCoachConfirmed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CoachId" class="btn btn-outline-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CoachId" class="btn btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CoachId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>